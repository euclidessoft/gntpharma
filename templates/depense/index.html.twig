<!DOCTYPE html>

<title>Depense index</title>

{% block body %}
    <h1>Depense index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Date</th>
                <th>Categorie</th>
                <th>Montant</th>
                <th>Reglement</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for depense in depenses %}
            <tr>
                <td>{{ depense.id }}</td>
                <td>{{ depense.libelle }}</td>
                <td>{{ depense.date ? depense.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ depense.categorie }}</td>
                <td>{{ depense.montant }}</td>
                <td>{{ depense.reglement }}</td>
                <td>{{ depense.statut }}</td>
                <td>
                    <a href="{{ path('depense_show', {'id': depense.id}) }}">show</a>
                    <a href="{{ path('depense_edit', {'id': depense.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('depense_new') }}">Create new</a>
{% endblock %}
