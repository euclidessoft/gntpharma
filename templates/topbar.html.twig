{% block javascripts %}
    <script>
        const locale = 'fr';

        // Fonction pour récupérer les notifications
        function fetchNotifications() {
            fetch(`/${locale}/notifications/check`)  // Vérifie si l'URL est correcte
                .then(response => response.json())
                .then(data => {
                    const notificationCount = document.getElementById('notification-count');
                    const notificationsMenu = document.getElementById('notifications-menu');

                    if (notificationCount) {
                        if (data.count > 0) {
                            notificationCount.textContent = data.count;
                            notificationsMenu.innerHTML = ''; // On vide les anciennes notifications

                            data.notifications.forEach(notification => {
                                const li = document.createElement('a');
                                li.classList.add('dropdown-item');
                                li.textContent = notification.message;
                                li.href = notification.lien;
                                li.dataset.id = notification.id;
                                li.style.cursor = 'pointer';
                                li.addEventListener('click', function () {
                                    markAsRead(notification.id, li); // Appel à la fonction markAsRead avec l'id et l'élément
                                });
                                notificationsMenu.appendChild(li);
                            });
                        } else {
                            notificationCount.textContent = '';
                            notificationsMenu.innerHTML = '<li class="dropdown-item">Aucune nouvelle notification</li>';
                        }
                    }
                })
                .catch(error => {
                    console.error('Erreur lors de la récupération des notifications:', error);
                });
        }

        // Fonction pour marquer la notification comme lue
        function markAsRead(notificationId, notificationElement) {
            fetch(`/${locale}/notifications/Read/${notificationId}`, {
                method: 'POST',
            })
                .then(response => response.json())
                .then(data => {
                    if (data.message) {
                        notificationElement.style.textDecoration = 'line-through';  // Par exemple, une ligne traversant la notification
                        notificationElement.style.color = 'gray';  // Optionnel : changer la couleur de la notification
                    }
                })
        }

        document.addEventListener('DOMContentLoaded', function () {
            fetchNotifications();
            setInterval(fetchNotifications, 30000);  // Vérifie les notifications toutes les 5 secondes
        });
    </script>
