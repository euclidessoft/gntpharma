{% extends 'commande.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block order %}active{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-primaire alert-dismissible fade show radius-10 shadow-black">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message|trans }}
        </div>
    {% endfor %}
    <h1>Liste Produits</h1>

    <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
        <thead>
        <tr>
            <th>Reference</th>
            <th>Designation</th>
            <th>Session</th>
            <th>Publique</th>
            <th>Commande<br> Minimum</th>
            <th>Fabriquant</th>
            {% if is_granted('ROLE_CLIENT') %}
                <th>Quantite</th>
            {% endif %}

            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.reference }}</td>
                <td>{{ produit.desigantion }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.prixpublic }}</td>
                <td>{{ produit.mincommande }}</td>
                <td>{{ produit.fabriquant }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                        <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                    </td>
                {% else %}
                    {% set tamp ='no' %}
                    <td class="text-center" id="tdprod{{ produit.id }}">

                        {% for pan in panier %}
                            {% if pan['produit'].id == produit.id %}
                                {% set tamp = pan['produit'].quantite %}

                            {% endif %}
                        {% endfor %}
                        {% if tamp != 'no' %}
                            {{ tamp }}
                        {% else %}
                            <input type="number" id="text{{ produit.id }}" class="form-control"
                                   onfocus="focu({{ produit.id }})" onblur="nofocu()" style="padding:0 10px">
                        {% endif %}
                    </td>
                    <td>
                        {% if tamp != 'no' %}

                            <button type="button" class="btn btn-primary disabled" id="btn{{ produit.id }}">
                                <i class="fa fa-cart-shopping"></i>
                            </button>

                        {% else %}
                            <button type="button" class="btn btn-primary" id="btn{{ produit.id }}"
                                    onclick="addprod({{ produit.id }}, {{ produit.mincommande }})">
                                <i class="fa fa-cart-shopping"></i>
                            </button>

                        {% endif %}

                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <input type="hidden" id="tampon"/>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('produit_new') }}">Create new</a>
    {% endif %}
{% endblock %}
