{% extends 'admin.html.twig' %}
{% block title %} {{ "Modification produit"|trans }} - GNT Pharma {% endblock %}
{% block produit %}active{% endblock %}
{% block all_produits %}active{% endblock %}

{% block body %}

    <div class="col-lg-8 offset-lg-2 mt-4 mb-5 fond-7 pb-5 pt-3 px-5">
        <h4 class="mb-5">
            <i class="fa-brands fa-product-hunt"></i><i class="fa fa-plus mr-2"></i>
            {{ 'Modifier produit'|trans }}
        </h4>
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                    &times;
                </button>
                {{ message|trans }}
            </div>
        {% endfor %}

            {{ include('produit/admin/_form.html.twig') }}

        <div class="col-md-3 offset-md-3 mt-4 pt-3 fond-7 d-table">
            <div class="centrer">
                <button type="button" class="btn btn-shadow btn-green btn-normal mb-3 mr-3" id="send"
                        onclick="envoie()">
                    <i class="fa fa-save"></i>
                    {{ 'Enregistrer'|trans }}
                </button>

                <a id="{{ produit.id }}" onclick="load({{ produit.id }})" href="{{ path('produit_show',{'id': produit.id } ) }}" class="btn btn-success-light btn-normal mb-3">
                    <i class="fa fa-undo"></i>
                    {{ 'Retour'|trans }}
                </a>
                {{ form_rest(form) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
