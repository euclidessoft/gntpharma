{{ form_start(form, {'attr' : { 'id' : 'form'}}) }}

<div class="col-lg-8 offset-lg-2 mt-4 fond-7 pb-5 pt-3 px-5">
    <h4 class="mb-3">
        <i class="fa fa-rotate mr-2"></i><i class="fa fa-plus mr-2"></i>
        {{ 'Nouveau Produit'|trans }}
    </h4>
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message|trans }}
        </div>
    {% endfor %}
    <h6 class="mt-4 mb-3 text-danger">
        {{ 'Les champs marqués par * sont obligatoires'|trans }}
    </h6>
    <div class="row">

        <div class="col-md-6 mb-4">
            {{ form_row(form.reference, {'attr':{'placeholder':'Reference *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.desigantion, {'attr':{'placeholder':'Désignqtion *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.prix, {'attr':{'placeholder':'Prix Session *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
                {{ form_row(form.prixpublic, {'attr':{'placeholder':'Prix Public *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.mincommande, {'attr':{'placeholder':'Commannde minimum *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.fabriquant, {'attr':{'placeholder':'Fabriquant *'}, 'label':false}) }}
        </div>
        {{ form_rest(form) }}

    </div>
    <div class="col-md-6 offset-md-3 mt-4 pt-3 fond-7">
        <div class="centrer">
            {#                <div class="row">#}
            <button type="button" class="btn btn-shadow btn-green btn-normal mb-2 mr-3" id="send"
                    onclick="envoie()">
                <i class="fa fa-save"></i>
                {{ 'Enregistrer'|trans }}
            </button>

            <button type="reset" class="btn btn-shadow btn-danger btn-normal mb-2">
                <i class="fa fa-delete-left"></i>
                {{ 'Effacer'|trans }}
            </button>
            {{ form_rest(form) }}
            {#                </div>#}
        </div>
        {{ form_end(form) }}
    </div>

{{ form_end(form) }}
</div>