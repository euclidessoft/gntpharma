{% extends 'admin.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block produit %}active{% endblock %}
{% block all_produits %}active{% endblock %}

{% block body %}
<div class="container-fluid mt-4 fond-7">
    <h3 class="mt-4 mb-5 text-bold">
        <i class="fa-brands fa-product-hunt mr-2"></i>
        {{ "Liste Produits"|trans }}
    </h3>
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message|trans }}
        </div>
    {% endfor %}

    <table class="table table-success-light table-bordered table-hover table-striped w-100 text-center" id="liste">
        <thead>
        <tr>
            <th>Code</th>
            <th class="text-left">Designation</th>
            <th>Prix Cession</th>
            <th>Prix Public</th>
            <th>Commande<br> Minimum</th>
            <th class="text-left">Fabriquant</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.reference }}</td>
                <td class="text-left">{{ produit.desigantion }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.prixpublic }}</td>
                <td>{{ produit.mincommande }}</td>
                <td class="text-left">{{ produit.fabriquant }}</td>
                <td class="text-nowrap">
                    <a class="btn btn-success" title="Voir" href="{{ path('produit_show', {'id': produit.id}) }}">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a class="btn btn-success-light" title="Modifier" href="{{ path('produit_edit', {'id': produit.id}) }}">
                        <i class="fa fa-edit"></i>
                    </a>
                    {{ include('produit/admin/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
