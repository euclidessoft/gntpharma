                        <div class="float-right">
                            <a href="{{ path('security_logout') }}">
                                <i class="fas fa-sign-out-alt"></i>
                                {{ 'Déconnexion'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

