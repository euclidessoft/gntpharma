                        <li class="dropdown-item">
                            <a class="nav-link  {% block new_livraison %}{% endblock %}" href="{{ path('livraison_index') }}">
                                <i class="fas fa-truck-fast mr-2"></i>
                                {{ 'En attente de livraison'|trans }}
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item dropright"
