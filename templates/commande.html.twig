                        <div class="title">
                            {{ 'Aide'|trans }}
                        </div>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="Aide">

                        <li class="dropdown-item">
                            <a class="nav-link {% block manuel %}{% endblock %}" target="_blank" href="/images/condition.pdf">
                                <i class="fas fa-book mr-2"></i>
                                {{ 'Condition de vente'|trans }}
                            </a>
                        </li>
                        <li class="dropdown-item">
                            <a class="nav-link {% block suggestion %}{% endblock %}" href="{{ path('suggestion_new') }}">
