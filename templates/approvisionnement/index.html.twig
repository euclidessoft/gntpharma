{% extends 'commande.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block order %}active{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-primaire alert-dismissible fade show radius-10 shadow-black">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message|trans }}
        </div>
    {% endfor %}
    <h1>Approvisionnement</h1>

    <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
        <thead>
        <tr>
            <th>Reference</th>
            <th>Designation</th>
            <th>Fabriquant</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.reference }}</td>
                <td>{{ produit.desigantion }}</td>
                <td>{{ produit.fabriquant }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <input type="hidden" id="tampon"/>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-success" href="{{ path('produit_new') }}">Nouveau Produit</a>
    {% endif %}
{% endblock %}
