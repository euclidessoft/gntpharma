{% extends 'commande.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block order %}active{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-primaire alert-dismissible fade show radius-10 shadow-black">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message|trans }}
        </div>
    {% endfor %}
    <h1>Historique des approvisionnements</h1>

    <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
        <thead>
        <tr>
            <th>Utilisateur</th>
            <th>Date</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for approv in approvisionnements %}
            <tr>
                <td>{{ approv.user.prenom }} {{ approv.user.nom }}</td>
                <td>{{ approv.date|date('d/m/Y') }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('stock_show', {'id': approv.id}) }}">Details</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a class="btn btn-success" href="{{ path('produit_new') }}"><i class="fa fa-plus"></i> Nouveau</a>
{% endblock %}
