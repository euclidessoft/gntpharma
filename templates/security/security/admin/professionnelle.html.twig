{% extends 'rh.html.twig' %}
{% block body %}
<div class="container mt-5 mb-5 p-5 fond-7">
    <h4 class="text-bold mb-5">
        <i class="fa fa-user mr-2"></i>
        {{ 'Profil utilisateur'|trans }}
    </h4>
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('security_profile') }}">
                {{'Informations'|trans }}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="{{ ('security_profile_professionnelle') }}">
                {{'Professionnelles'|trans}}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('security_change_password') }}">
                {{'Securite'|trans}}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('evaluation_suivi') }}">
                {{'Discipline'|trans}}
