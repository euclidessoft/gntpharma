                         role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        {{ message|trans }}
                    </div>
                {% endfor %}
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-lg-4 p-0 text-center">
                            <img src="{{ asset('images/team_1.avif') }}" alt="" class="w-100 img-fluid rounded">
