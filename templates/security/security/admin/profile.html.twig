                            {#                                                     <img src="{{asset('images/avatar.jpg') }}" width="100" alt="Photo" class="rounded-circle" />#}
                            {#                                                     {% else %}#}
                            {#                                                     <img src="{{asset('images/avatar-femme.jpg') }}" width="100" alt="Photo" class="rounded-circle" />#}
                            {#                                                     {% endif %}#}
                            {#                                                     <h6 class="mt-3">{{ user.bloodgroup }}</h6>#}
                        </div>
                        <div class="col-lg-4 col-5 mt-3 mb-4 text-right">
                            <div>Prenom :</div>
                            <div>Nom :</div>
                            <div>Telephone :</div>
                            <div> Email:</div>
                            <div>Adresse :</div>
                        </div>
                        <div class="col-lg-4 col-4 mt-3 mb-4 ml-n3 text-bold">
                            <div>  {{ user.prenom }}</div>
                            <div>  {{ user.nom }}</div>
                            <div>   {{ user.phone }}</div>
                            <div> {{ user.email }}</div>
                            <div>  {{ user.adresse }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
