{#{% extends 'admin.html.twig' %}#}
{% block title %} {{ 'creer nouvel utilisateur'|trans }} - GNT Pharma {% endblock %}
{% block body %}

    <div class="row">
        <div class="col-12">
            <div class="col-lg-6 offset-lg-3 pb-1 fond-7">
                <h1 class="text-center bleu">GNT PHARMA</h1>

                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                            &times;
                        </button>
                        {{ message|trans }}
                    </div>
                {% endfor %}
                <div class="col-12">
                    Les champs avec * sont obligatoires
                </div>
                {{ include('security/security/admin/userform.html.twig') }}
                <br/>
            </div>
        </div>
    </div>

{% endblock %}
