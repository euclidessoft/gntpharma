{% extends 'layout.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block order %}active{% endblock %}
{% block body %}
<!-- Header Start -->
<div class="container-fluid py-5 mb-5 page-header">
    <div class="container">
        <div class="row justify-content-center mt-lg-5">
            <div class="col-lg-10 text-center mt-lg-5">
                <h1 class="display-5 text-white fw-bold mt-lg-5 mb-4">
                    {{ "Commande"|trans }}
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item">
                            <a class="text-white" href="{{ path('Accueil') }}">
                                {{ "Accueil"|trans }}
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            {{ "Commande"|trans }}
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
    <div class="container">
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-6 offset-lg-3 mt-5 fond">
            <h4 class="text-bold">
                <i class="fa fa-lock"></i>
                {{ 'Mot de passe oublie'|trans }}
            </h4>
            <div class="col-md-12 text-center mb-3">
                <img src="{{asset('images/logo.JPG') }}" width="150" alt="Photo" class="rounded-circle" />
            </div>
            {% for message in app.flashes('notice')%}
    <div class="alert alert-danger alert-dismissible fade show radius-10 shadow-black">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            &times;
        </button>
        {{ message|trans }}
    </div>
{% endfor%}
            {% for message in app.flashes('change')%}
    <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            &times;
        </button>
        {{ message|trans }}
    </div>
{% endfor%}
            <div class="col-lg-8 offset-lg-2">
                <form action="{{ path('security_forgotten_password') }}" method="POST" class="form-signin">
                    <input type="email" name="_mail" id="_mail" placeholder="{{ 'Adresse email'|trans }}" class="form-control" required>
                    <div class="form-group mt-4">
                        <a href="{{ path('security_login') }}"><b>
                            {{ 'Retour à la page de connexion'|trans }}
                        </b></a>
                    </div>
                    <button class="btn btn-success mt-4 mb-4 pl-4 pr-4" type="submit">
                        {{ 'Réinitialiser'|trans }}
                        <i class="fa fa-sync"></i>
                    </button>
                </form>
                </div>
            </div>
            </div>
        </div>
    </div>

        {% endblock %}