<div class="row">
    <div class="col-5">
        <img src="{{ asset('images/team_1.avif') }}" alt="" class="w-100 mx-2">
    </div>
    <div class="col-7">
        <div class="mt-0">
            <h6 class="text-bold">
                {{ app.user.prenom }}
                {{ app.user.nom }}
            </h6>
        </div>
        <div class="mt-3">
            <a href="{{ path('security_profile') }}">
                <i class="fa fa-user"></i>
                {{ 'Profil'|trans }}
            </a>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-2">
                <a href="{{ path('security_users') }}" {% block admin %}{% endblock %}>
                    <i class="fas fa-user-cog"></i>
                    {{ 'Administration'|trans }}
                </a>
            </div>
        {% endif %}
        <div class="mt-2">
            <a href="{{ path('security_logout') }}" data-toggle="modal"
               data-target="#logout">
                <i class="fa fa-power-off"></i>
                {{'DÃ©connexion'|trans}}
            </a>
        </div>
    </div>
</div>