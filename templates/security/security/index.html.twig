{% extends 'layout.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block order %}active{% endblock %}
{% block body %}
    <!-- Header Start -->
    <div class="container-fluid py-5 mb-5 page-header">
        <div class="container">
            <div class="row justify-content-center mt-lg-5">
                <div class="col-lg-10 text-center mt-lg-5">
                    <h1 class="display-5 text-white fw-bold mt-lg-5 mb-4">
                        {{ "Commande"|trans }}
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item">
                                <a class="text-white" href="{{ path('Accueil') }}">
                                    {{ "Accueil"|trans }}
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                {{ "Commande"|trans }}
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 mb-5">
                <div class="col-lg-6 offset-lg-3 pb-1 fond">
                    <h3 class="text-center bleu"> Bienvenue sur l'inscription en ligne de</h3>
                    <h1 class="text-center bleu">GNT PHARMA</h1>

                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                                &times;
                            </button>
                            {{ message|trans }}
                        </div>
                    {% endfor %}
                    <div class="col-12">
                        Les Champs avec * sont obligatoires
                    </div>
                    {{ include('security/security/userform.html.twig') }}
                    <br/>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

