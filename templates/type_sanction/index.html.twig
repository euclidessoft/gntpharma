{% extends 'employe.html.twig' %}
{% block title %} {{ "Types de sanction"|trans }} - GNT Pharma {% endblock %}
{% block employe %}active{% endblock %}
{% block sanction %}active{% endblock %}
{#{% block all_type_conges %}active{% endblock %}#}
{% block body %}
<div class="col-lg-6 mt-4 fond-7">
    <h3 class="mt-4 mb-5 text-bold">
        <i class="fa fa-user-xmark mr-2"></i>
        {{ "Types de sanction"|trans }}
    </h3>
    <a href="{{ path('type_sanction_new') }}" class="btn btn-success mb-4"><i class="fas fa-plus"></i>Nouveau</a>
    <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Sanction</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_sanction in type_sanctions %}
            <tr>
                <td>{{ type_sanction.id }}</td>
                <td>{{ type_sanction.nom }}</td>
                <td>
                    <a href="{{ path('type_sanction_show', {'id': type_sanction.id}) }}">show</a>
                    <a href="{{ path('type_sanction_edit', {'id': type_sanction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
