{{ form_start(form, {'attr': {'id': 'form'}}) }}

<div class="col-lg-5 offset-lg-2 mt-4 fond-7 pb-5 pt-3 px-5">
    <h4 class="mb-3">
        <i class="fa-brands fa-product-hunt mr-2"></i><i class="fa fa-plus mr-2"></i>
        {{ 'Nouvel financement'|trans }}
    </h4>

    {% for message in app.flashes('notice') %}
    <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            &times;
        </button>
        {{ message|trans }}
    </div>
    {% endfor %}
    <div class="row">
        <div class="col-12 mb-4">
            {{ form_row(form.provenance, {'attr': {'placeholder': 'Provenance *'}, 'label': false}) }}
        </div>

        <div class="col-12 mb-4">
            {{ form_row(form.compte, {'attr': {'placeholder': 'compte *'}, 'label': false}) }}
        </div>

        <div class="col-12 mb-4">
            {{ form_row(form.motif, {'attr': {'placeholder': 'Motif *'}, 'label': false}) }}
        </div>

        <div class="col-12 mb-4">
            {{ form_row(form.montant, {'attr': {'placeholder': 'Montant *'}, 'label': false}) }}
        </div>

        <div class="col-12 mb-4">
            {{ form_row(form.Type, { 'attr' : {'onchange' : 'typeversement()'}, 'label': false}) }}
        </div>
    </div>
    <div id="versement">
        <div class="form-group">
            {{ form_row(form.banque, {'label':false, 'attr' : {'placeholder':'Banque'}}) }}
        </div>
        <div class="form-group mt-4">
            {{ form_row(form.numero, {'label':false, 'attr' : {'placeholder':'Num√©ro'}}) }}
        </div>
    </div>
    {{ form_rest(form) }}
</div>


{% block scripts %}
<script>
    function typeversement() {
        if ($('#financement_Type option:selected').val() == 'Cheque' || $('#financement_Type option:selected').val() == 'Virement') {
            $('#versement').show();
            $('#depense_numero').val();
        } else {
            $('#versement').hide();
            $('#depense_numero').val();
        }
    }
</script>

{% endblock %}