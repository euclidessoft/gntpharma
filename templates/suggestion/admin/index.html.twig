{% extends 'admin.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block aide %}active{% endblock %}

{% block body %}
<div class="container-fluid mt-4 fond-7">
    <h3 class="mt-4 mb-5 text-bold">
        <i class="fa-brands fa-product-hunt mr-2"></i>
        {{ "Liste des suggestions"|trans }}
    </h3>
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message|trans }}
        </div>
    {% endfor %}
    <table class="table">
        <thead>
            <tr>
                <th>Message</th>
{#                <th>actions</th>#}
            </tr>
        </thead>
        <tbody>
        {% for suggestion in suggestions %}
            <tr>
                <td>{{ suggestion.message }}</td>
{#                <td>#}
{#                    <a  class="btn btn-success" href="{{ path('suggestion_show', {'id': suggestion.id}) }}">show</a>#}
{#                </td>#}
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'aucune suggestion'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
