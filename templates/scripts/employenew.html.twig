// Ajouter une remarque
function autretext() {
    if ($('#autre').is(':checked')) {
        $('#employe_remark').show();
    } else {
        $('#employe_remark').hide().val('');
    }
}


//enregistrer numero passeport
function Passeport() {
    if ($('#mecquebundle_pelerin_numpassport').val() != "") {
        $('#Passeport').show();
    } else {
        $('#Passeport').hide();
        $('#mecquebundle_pelerin_numpassport').val('');
    }
}
