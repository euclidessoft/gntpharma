                            <li class="dropdown-item submenu">
                                <a class="nav-link dropdown-toggle" href="#" id="livraison" data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-shop mr-2"></i>
                                    {{ 'Livraison'|trans }}
                                </a>
