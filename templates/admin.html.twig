                        </li>
                        <li class="dropdown-item">
                            <a class="nav-link" href="{{ path('produit_vente_admin') }}">
                                <i class="fas fa-user-clock mr-1"></i>
                                {{ 'Meilleures Ventes'|trans }}
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item dropright {% block promotion %}{% endblock %}" title="{{ 'Promotion'|trans }}">
                    <a class="nav-link dropdown-toggle" href="#" id="promotion" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        <div class="icone">
                            <i class="fas fa-tags fa-lg"></i>
                        </div>
                        <div class="title">
                            {{ 'Promotion'|trans }}
                        </div>
                    </a>
                    <ul class=" dropdown-menu" aria-labelledby="pelerin">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="dropdown-item">
                                <a class="nav-link" href="{{ path('promotion_new') }}">
                                    <i class="fas fa-user-plus mr-2"></i>
                                    {{ 'Creer une promotion'|trans }}
                                </a>
                            </li>
                        {% endif %}
                        <li class="dropdown-item">
                            <a class="nav-link" href="{{ path('promotion_courante') }}">
