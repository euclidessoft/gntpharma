                        <a class="nav-link dropdown-toggle" href="#" id="Produits" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            <div class="icone">
                                <i class="fas fa-staff-snake fa-lg"></i>
                            </div>
                            <div class="title">
                                {{ 'Officine'|trans }}
                            </div>
                        </a>
                        <ul class=" dropdown-menu" aria-labelledby="pelerin">
                            <li class="dropdown-item">
                                <a class="nav-link" href="{{ path('avoir_choix') }}">
                                    <i class="fas fa-money-bill mr-2"></i>
                                    {{ 'Créer avoir'|trans }}
                                </a>
                            </li>
                            <li class="dropdown-item">
                                <a class="nav-link" href="{{ path('avoir_index') }}">
                                    <i class="fas fa-users mr-2"></i>
                                    {{ 'Tous les avoirs'|trans }}
                                </a>
                            </li>
                            <li class="dropdown-item">
                                <a class="nav-link" href="{{ path('security_profile') }}">
                                    <i class="fas fa-list mr-2"></i>
                                    {{ 'Compte Client'|trans }}
                                </a>
                            </li>
                        </ul>
                    </li>
                {% endif %}


                <li class="nav-item dropright {% block aide %}{% endblock %}" title="{{ 'Aide'|trans }}">
                    <a class="nav-link dropdown-toggle" href="#" id="Aide" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false">
                        <div class="icone">
                            <i class="fas fa-question-circle fa-lg"></i>
                        </div>
                        <div class="title">
                            {{ 'Aide'|trans }}
                        </div>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="Aide">

                        <li class="dropdown-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-book mr-2"></i>
                                {{ 'Manuel'|trans }}
