                                            <i class="fas fa-shop mr-2"></i>
                                            {{ 'Nouvelle Livraison'|trans }}
                                        </a>
                                    </li>
                                    <li class="dropdown-item">
                                        <a class="nav-link" href="{{ path('livraison_historique') }}">
                                            <i class="fas fa-shop mr-2"></i>
                                            {{ 'Historique des Livraisons'|trans }}
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                {% endif %}
                <li class="nav-item dropright {% block produit %} {% endblock %}" title="{{ 'Produits'|trans }}">
                    <a class="nav-link dropdown-toggle" href="#" id="Produits" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        <div class="icone">
                            <i class="fa-brands fa-product-hunt fa-lg"></i>
                        </div>
                        <div class="title">
                            {{ 'Produits'|trans }}
                        </div>
                    </a>
                    <ul class=" dropdown-menu" aria-labelledby="pelerin">
