                            <li class="dropdown-item">
                                <a class="nav-link" href="{{ path('produit_new') }}">
                                    <i class="fa fa-plus mr-2"></i>
                                    {{ 'Nouveau Produit'|trans }}
                                </a>
                            </li>
                        {% endif %}
                        <li class="dropdown-item">
                            <a class="nav-link" href="{{ path('produit_index') }}">
                                <i class="fas fa-user-plus mr-2"></i>
                                {{ 'Tous les produits'|trans }}
                            </a>
                        </li>

                        <li class="dropdown-item">
                            <a class="nav-link" href="{{ path('produit_arrivage_admin') }}">
                                <i class="fas fa-list mr-2"></i>
                                {{ 'Arrivage'|trans }}
