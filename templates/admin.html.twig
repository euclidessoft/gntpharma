                    </div>
                    <div class="col-lg-2 col-md-3 col-6 text-nowrap">

                        <a href="{{ path('security_profile') }}" {% block admin %}{% endblock %}>
                            <i class="fas fa-user-cog"></i>
                            {{ 'Administration'|trans }}
                        </a>

                    </div>
                    <div class="col-lg-2 col-md-3 col-6 text-nowrap">
