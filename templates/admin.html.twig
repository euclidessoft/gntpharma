                        </li>
                        <li class="dropdown-item">
                            <a class="nav-link" href="{{ path('promotion_index') }}">
                                <i class="fas fa-user-plus mr-2"></i>
                                {{ 'Toutes les promotions'|trans }}
                            </a>
                        </li>
                    </ul>
                </li>
                {% if is_granted('ROLE_FINANCE') %}
                    <li class="nav-item dropright {% block commande %}{% endblock %}" title="{{ 'Commande'|trans }}">
                        <a class="nav-link dropdown-toggle" href="#" id="commande" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            <div class="icone">
                                <i class="fa fa-shopping-cart fa-lg"></i>
                            </div>
                            <div class="title">
                                {{ 'Commande'|trans }}
                            </div>
                        </a>
                        <ul class=" dropdown-menu" aria-labelledby="pelerin">
                            <li class="dropdown-item">
                                <a class="nav-link" href="{{ path('commande_panier_suivi') }}">
                                    <i class="fas fa-user-plus mr-2"></i>
                                    {{ 'Suivi Commande'|trans }}
                                </a>
                            </li>
                            <li class="dropdown-item">
                                <a class="nav-link" href="{{ path('commande_panier_extranet') }}">
                                    <i class="fas fa-users mr-2"></i>
                                    {{ 'Commandes Extranet'|trans }}
                                </a>
