{% extends 'employe.html.twig' %}
{% block title %} {{ "Lignes de depenses"|trans }} - GNT Pharma {% endblock %}
{% block employe %}active{% endblock %}
{% block poste %}active{% endblock %}
{% block all_postes %}active{% endblock %}
{% block body %}
<div class="col-lg-6 mt-4 fond-7">
    <h3 class="mt-4 mb-5 text-bold">
        <i class="fa fa-money-bill mr-2"></i>
        {{ "Liste des postes"|trans }}
    </h3>
    <a href="{{ path('poste_new') }}" class="btn btn-success mb-4"><i class="fas fa-plus"></i>Nouvel poste</a>
    <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
        <thead>
            <tr>
                <th>{{('Nom'|trans)}}</th>
                <th>{{('Description'|trans)}}</th>
                <th>{{('actions'|trans)}}</th>
            </tr>
        </thead>
        <tbody>
        {% for poste in postes %}
            <tr>
                <td data-label="Nom">{{ poste.nom }}</td>
                <td data-label="Description">{{ poste.description }}</td>
                <td data-label="Actions">
                    <a href="{{ path('poste_show', {'id': poste.id}) }}" class="btn btn-success"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('poste_edit', {'id': poste.id}) }}" class="btn btn-success-light"><i class="fas fa-edit"></i></a>
                    {{ include('poste/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucune ligne de d√©penses</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
