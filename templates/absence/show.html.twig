{% if detailedAbsences is not null %}
    <h3>Détails des absences de {{ employee.nom }}</h3>
    <p><strong>Intervalle : </strong>{{ detailedAbsences.startDate|date('d/m/Y') }} 
    {% if detailedAbsences.startDate != detailedAbsences.endDate %}
        au {{ detailedAbsences.endDate|date('d/m/Y') }}
    {% endif %}</p>
    
    <ul>
        {% for absence in detailedAbsences.absences %}
            <li>{{ absence.dateAbsence|date('d/m/Y') }} - 
                {% if absence.status == 0 and absence.justifier == 0 %}
                    <span class="badge badge-warning">En attente de justification</span>
                {% elseif absence.justifier == 0 and absence.status == 1 %}
                    <span class="badge badge-info">En attente de validation</span>
                {% elseif absence.status == 1 and absence.justifier == 1 %}
                    <span class="badge badge-success">Absence justifiée</span>
                {% elseif absence.status == 0 and absence.justifier == 1 %}
                    <span class="badge badge-danger">Rejetée</span>
                {% else %}
                    <span class="badge badge-secondary">Statut inconnu</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p class="text-center text-muted">Aucune absence trouvée pour cet intervalle.</p>
{% endif %}
