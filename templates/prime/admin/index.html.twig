{% extends 'rh.html.twig' %}
{% block paie %}active{% endblock %}
{% block prime %}active{% endblock %}
{% block body %}
    <div class="container mt-4 fond-7 pb-5 pt-3 px-5">
        <h4 class="text-bold mb-5">
            <i class="fa-solid fa-gears fa-lg"></i>
            {{ 'Liste des primes'|trans }}
        </h4>
        <a href="{{ path('prime_new') }}" class="btn btn-success mb-4"><i class="fas fa-plus"></i>Nouveau prime</a>
        <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
            <thead>
            <tr>
                <th>Matricule</th>
                <th>Employ√©(e)</th>
                <th>Montant</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for prime in primes %}
                <tr>
                    <td>{{ prime.employe.matricule }}</td>
                    <td>{{ prime.employe.nom~' '~prime.employe.prenom }}</td>
                    <td>{{ prime.montant }}</td>
                    <td>{{ prime.description }}</td>
                    <td>
                        <a href="{{ path('prime_show', {'id': prime.id}) }}">show</a>
                        <a href="{{ path('prime_edit', {'id': prime.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
