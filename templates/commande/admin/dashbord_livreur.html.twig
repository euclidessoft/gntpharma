{% extends "livreur.html.twig" %}
{% block home %}active{% endblock %}
{% block body %}

    {% for message in app.session.flashbag.get('notice') %}
        <div class="container mt-5 mb-5">
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ message|trans }}
            </div>
        </div>
    {% endfor %}
    <div class="col-md-8 offset-md-2 my-5">
        <div class="row">
            <div class="col-lg-3 h-100 col-md-4 col-sm-6 mt-3 mb-3">
                <div class="card border-green">
                    <div class="card-header bg-success-light text-green">
                        <div class="row">
                            <div class="col-12">
                                <i class="fa-solid fa-warehouse fa-5x"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-right">
                                <div class="text-bold"></div>
                                <div>
                                    Produit en stock
                                </div>
                                <br>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light bt-green">
                    <span class="float-left">
                        <a href="" class="text-green">{{ 'Voir les détails'|trans }}
                        </a>
                    </span>
                        <span class="float-right">
                        <a href="" class="text-green">
                            <i class="fa fa-arrow-circle-right fa-lg"></i>
                        </a>
                    </span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 h-100 col-md-4 col-sm-6 my-3">
                <div class="card border-green">
                    <div class="card-header bg-green text-white">
                        <div class="row">
                            <div class="col-12">
                                <i class="fa-solid fa-arrow-trend-down fa-5x"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-right">
                                <div class="text-bold"></div>
                                <div>
                                    Produit en rupture
                                </div>
                                <br>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light bt-green">
                    <span class="float-left">
                        <a href="{{ path('stock_rupture') }}" class="text-green">
                            {{ 'Voir les détails'|trans }}
                        </a>
                    </span>
                        <span class="float-right">
                        <a href="" class="text-green">
                            <i class="fa fa-arrow-circle-right fa-lg"></i>
                        </a>
                    </span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
