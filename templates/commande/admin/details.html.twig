{% extends 'admin.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block commande %}active{% endblock %}

{% block body %}<div class="container mt-4 fond-7">
    <h3 class="mt-4 mb-5 text-bold">
        <i class="fa fa-money-bill mr-2"></i>
        {{ "Details commande"|trans }}
    </h3>

    <div class="row justify-content-end">
        <div class="col-lg-12">
    <table class="table table-success-light table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>Numero Commande</th>
            <th>Date</th>
            <th>Client</th>
            <th>Date de Paiement</th>
            <th>Type</th>
            <th>Banque</th>
            <th>Numero</th>

        </tr>
        </thead>
        <tbody>
        <td>{{ commande.id }}</td>
        <td>{{ commande.date|date('d/m/Y') }}</td>
        <td>{{ commande.user.nom }}</td>
        <td>{{ paiement.date ? paiement.date|date('d/m/Y') : '' }}</td>
        <td>{{ paiement.type }}</td>
        <td>{{ paiement.banque }}</td>
        <td>{{ paiement.numero }}</td>

        </tbody>
    </table>
        </div>
    </div>
{% set total=0 %}
{% set reduction=0 %}
    <table class="table table-success-light table-bordered table-hover table-striped w-100">
        <thead>
        <tr>
            <th>Code Produit</th>
            <th>Desigantion</th>
            <th>Quantite Commandee</th>
            <th>Prix Cession</th>
            <th>Prix Public</th>
            <th>Montant</th>
        </tr>
        </thead>
        <tbody>
        {% for commandeproduit in commandeproduits %}
            <tr>
                <td> {{ commandeproduit.produit.id }} </td>
                <td>{{ commandeproduit.produit.desigantion }} </td>
                <td> {{ commandeproduit.quantite }} </td>
                <td>
                    {{ commandeproduit.produit.prix|number_format(0, '' , ' ') }}
                    {% if commandeproduit.produit.promotion is not null %}
                        {% if commandeproduit.produit.promotion.reduction is not null %}
                            {% set reduction =  reduction + (commandeproduit.quantite * commandeproduit.session * commandeproduit.produit.promotion.reduction /100) %}
                            <span class="badge badge-danger">
                                    -{{ commandeproduit.produit.promotion.reduction }}%
                            </span>
                        {% endif %}
                    {% endif %}
                </td>
                <td>{{ commandeproduit.produit.prixpublic|number_format(0, '' , ' ') }}</td>
                <td>
                    {{ (commandeproduit.quantite * commandeproduit.produit.prix)|number_format(0, '' , ' ') }}
                    {% set total = total + (commandeproduit.quantite * commandeproduit.produit.prix) %}
                </td>



            </tr>

        {% else %}
            <tr>
                <td colspan="8">Aucune commande</td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="5" class="text-right">
                {{ "Total"|trans }}
            </td>
            <td>
                <span id="total">{{ total|number_format(0, '' , ' ') }}</span>
            </td>
        </tr>
        <tr>
            <td colspan="5" class="text-right">
                {{ "Net Ã  payer"|trans }}
            </td>
            <td>
                <span id="total">{{ (total-reduction)|number_format(0, '' , ' ') }}</span>
            </td>
        </tr>
        </tbody>
    </table>
    </div>

{% endblock %}