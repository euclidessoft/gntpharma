{% extends 'rh.html.twig' %}
{% block communication %}active{% endblock %}
{% block note %}active{% endblock %}
{% block body %}

    {{ include('note_service/_form.html.twig', {'button_label': 'Update'}) }}
    <div class="col-md-3 offset-md-3 mt-4 pt-3 fond-7 d-table">
            <div class="centrer">
                <button type="button" class="btn btn-shadow btn-green btn-normal mb-3 mr-3" id="send"
                        onclick="envoie()">
                    <i class="fa fa-save"></i>
                    {{ 'Enregistrer'|trans }}
                </button>

                <a id="{{ note_service.id }}" onclick="load({{ note_service.id }})" href="{{ path('note_service_index') }}" class="btn btn-success-light btn-normal mb-3">
                    <i class="fa fa-undo"></i>
                    {{ 'Retour'|trans }}
                </a>
                {{ form_rest(form) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
