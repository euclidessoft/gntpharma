{{ form_start(form, {'attr' : { 'id' : 'form'}}) }}

<div class="col-lg-8 offset-lg-2 my-4 fond-7 pb-5 pt-3 px-5">
    <h4 class="mb-3">
        <i class="fa fa-rotate mr-2"></i><i class="fa fa-plus mr-2"></i>
        {{ 'Nouvelle promotion'|trans }}
    </h4>
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message|trans }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger alert-dismissible fade show radius-10 shadow-black">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message|trans }}
        </div>
    {% endfor %}
    <div class="row">

        <div class="col-md-6 mb-4">
            {{ form_row(form.designation, {'attr':{'placeholder':'designation *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.type, {'attr':{'placeholder':'Type *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.debut, {'label':false, 'attr' : {'onchange' : 'gestdate()'}}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.fin, {'label':false, 'attr' : {'onchange' : 'gestdate()'}}) }}
        </div>
        <div class="row" id="tranche">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        premier tranche

                    </div>
                    <div class="card-body">
                        {{ form_row(form.premier, {'attr':{'placeholder':'nombre acheté'}, 'label':false}) }}
                        {{ form_row(form.ugpremier, {'attr':{'placeholder':'nombre U.G'}, 'label':false}) }}
                    </div>
                </div>

            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        deuxieme tranche

                    </div>
                    <div class="card-body">
                        {{ form_row(form.deuxieme, {'attr':{'placeholder':'nombre acheté'}, 'label':false}) }}
                        {{ form_row(form.ugdeuxieme, {'attr':{'placeholder':'nombre U.G'}, 'label':false}) }}
                    </div>
                </div>

            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        troisieme tranche

                    </div>
                    <div class="card-body">
                        {{ form_row(form.troisieme, {'attr':{'placeholder':'nombre acheté'}, 'label':false}) }}
                        {{ form_row(form.ugtroisieme, {'attr':{'placeholder':'nombre U.G'}, 'label':false}) }}
                    </div>
                </div>

            </div>

        </div>
        <div class="col-md-12 mb-4" id="reduction">
            <div class="input-group ">
                {{ form_widget(form.reduction, {'attr':{'placeholder':'reduction'}, 'label':false}) }}
                <div class="input-group-append">
                    <span class="input-group-text" id="basic-addon2">%</span>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}

    </div>
    <div class="col-md-6 offset-md-3 mt-4 pt-3 fond-7">
        <div class="centrer">
            {#                <div class="row">#}
            <button type="button" class="btn btn-shadow btn-green btn-normal mb-2 mr-3" id="send"
                    onclick="promosubmit()">
                <i class="fa fa-save"></i>
                {{ 'Enregistrer'|trans }}
            </button>

            <button type="reset" class="btn btn-shadow btn-danger btn-normal mb-2">
                <i class="fa fa-delete-left"></i>
                {{ 'Effacer'|trans }}
            </button>
            {{ form_rest(form) }}
            {#                </div>#}
        </div>
        {{ form_end(form) }}
    </div>

    {{ form_end(form) }}
</div>