{% extends 'admin.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block stock %}active{% endblock %}
{% block etat_stock %}active{% endblock %}

{% block body %}
    <div class="container mt-4 fond-7">
        <h3 class="mt-4 mb-5 text-bold">
            <i class="fa fa-shopping-cart mr-2"></i>
            {{ "Etat stock Produits"|trans }}
        </h3>
        <ul class="nav nav-tabs mb-4">
            {% if is_granted('ROLE_STOCK') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('stock_index') }}">
                        {{ 'Disponible'|trans }}</a>
                </li>
            {% endif %}
            <li class="nav-item">
                <a class="nav-link active" href="#">
                    {{ 'à surveiller'|trans }}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('stock_rupture') }}">
                    {{ 'En rupture'|trans }}</a>
            </li>
            {% if is_granted('ROLE_STOCK') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('stock_peremption') }}">
                        {{ 'Peremption Imminante'|trans }}</a>
                </li>
            {% endif %}
        </ul>

        <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
            <thead>
            <tr>
                <th>{{ 'Reference'|trans }}</th>
                <th>{{ 'Designation'|trans }}</th>
                <th>{{ 'Fabriquant'|trans }}</th>
                <th>{{ 'Quantite'|trans }}</th>

                <th>{{ 'actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td>{{ produit.reference }}</td>
                    <td>{{ produit.desigantion }}</td>
                    <td>{{ produit.fabriquant }}</td>
                    <td>{{ produit.stock|number_format(0, '' , ' ') }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('stock_produit_show', {'id': produit.id}) }}"><i class="fa fa-list"></i>
                            {{'Détails'|trans}}
                        </a>
                    </td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
