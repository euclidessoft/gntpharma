{% extends 'admin.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block retour_stock %}active{% endblock %}
{% block body %}
    <div class="container mt-4 pb-4 fond-7">
        <h3 class="mt-4 mb-3 text-bold">
            <i class="fa fa-shop mr-2"></i>
            {{ "Retour Stock"|trans }}
        </h3>
        <div class="col-6 fond-7">
            <table class="table table-success-light table-bordered table-hover table-striped mt-3 w-100">
                <thead>
                <tr>
                    <th>N° Retour</th>
                    <th>Date retour</th>
                    <th>Client</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ retour.id }}</td>
                    <td>{{ retour.date|date('d/m/Y') }}</td>
                    <td> {{ retour.commande.user.nom }}</td>


                </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-lg-12 mt-5">
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-primaire alert-dismissible fade show radius-10 shadow-black">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                            &times;
                        </button>
                        {{ message|trans }}
                    </div>
                {% endfor %}

                {#                {% set inlist = [] %}#}
                {#                {% for produit in panier %}#}

                {#                    {% set inlist = inlist|merge([produit['id']]) %}#}
                {#                {% else %}#}

                {#                {% endfor %}#}

                <table class="table table-success-light table-bordered table-hover table-striped text-center w-100" id="liste">
                    <thead>
                    <tr>
                        <th>{{ "Reference"|trans }}</th>
                        <th class="text-left">{{ "Designation"|trans }}</th>
                        <th>{{ "N° lot"|trans }}</th>
{#                        <th>{{ "Pereption"|trans }}</th>#}
                        <th>{{ "Motif"|trans }}</th>
                        <th>{{ "Qté retournée"|trans }}</th>
                        {% if is_granted("ROLE_ADMIN") %}
                        <th></th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for retourproduit in retourproduits %}
                        <tr id="listprod{{ retourproduit.produit.id }}">
                            <td>{{ retourproduit.produit.reference }}</td>
                            <td class="text-left">{{ retourproduit.produit.desigantion }}</td>
                            <td>{{ retourproduit.lot }}</td>
                            <td>{{ retourproduit.motif }}</td>
                            <td>{{ retourproduit.quantite }}</td>
                            {% if is_granted("ROLE_ADMIN") and retourproduit.reapprovisionner == 0 %}
                            <td>
                                <button type="button" id="btn{{ retourproduit.produit.id }}{{ retourproduit.lot }}" class="btn btn-success" onclick="retour_reapprovisionner({{ retour.id }}, {{ retourproduit.produit.id }},{{ retourproduit.lot }},'{{ retourproduit.peremption|date('Y-m-d') }}',{{ retourproduit.quantite }})"><i class="fas fa-warehouse"></i><i class="fa fa-arrow-left"></i>  {{ "Réapprovisionner"|trans }}</button>
                            </td>
                                {% else %}
                                    <td></td>
                            {% endif %}
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">{{ "Aucun retour"|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script>
        function retour_reapprovisionner(id, produit, lot, peremption, quantite) {


                    $("#btn" + produit+lot).html("<i class='fa-solid fa-spinner fa-spin-pulse'></i>");
                    $.ajax({
                        type: "POST",
                        url: "{{ path('stock_retour_reapprovisionner') }}",
                        data: { produit : produit, quantite: quantite, lot: lot, peremption: peremption, retour: id},
                        success: function (data) {
                            document.location.href="#";
                        },
                        error: function () {
                            alert("{{ 'La requête n a pas abouti'|trans }}");
                        }
                    });
        }


    </script>


{% endblock %}