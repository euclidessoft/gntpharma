{% extends 'admin.html.twig' %}
{% block title %} {{ "Commande"|trans }} - GNT Pharma {% endblock %}
{% block order %}active{% endblock %}

{% block body %}
<div class="container-fluid mt-4 fond-7">
    <h3 class="mt-4 mb-5 text-bold">
        <i class="fa fa-shopping-cart mr-2"></i>
        {{ "Etat stock Produits"|trans }}
    </h3>
    <ul class="nav nav-tabs mb-4">
        {% if is_granted('ROLE_STOCK') %}
        <li class="nav-item">
            <a class="nav-link active" href="">Disponible</a>
        </li>
        {% endif %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('stock_surveiller') }}">à surveiller</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('stock_rupture') }}">En rupture</a>
        </li>
    </ul>

    <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
        <thead>
        <tr>
            <th>Reference</th>
            <th>Designation</th>
            <th>Fabriquant</th>
{#            <th>N° Lot</th>#}
{#            <th>Peremptio</th>#}
            <th>Quantite</th>

            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in stock %}
            <tr>
                <td>{{ produit.produit.reference }}</td>
                <td>{{ produit.produit.desigantion }}</td>
                <td>{{ produit.produit.fabriquant }}</td>
{#                <td>{{ produit.lot }}</td>#}
{#                <td>{{ produit.peremption|date('d/m/Y') }}</td>#}
                <td>{{ produit.produit.stock|number_format(0, '' , ' ') }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('stock_produit_show', {'id': produit.produit.id}) }}"><i class="fa fa-list"></i> Détails</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
