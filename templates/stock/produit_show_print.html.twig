<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>	&nbsp;</title>
    <style>
        .titre {
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            font-size: 30px;
            font-weight: bold;
            color: #039c4f;
        }

        .text {
            font-size: 14px;
        }

        .badge {
            background-color: red !important;
        }

        @media print {
            .table-success-light {
                color: #000 !important;
            }

            .table-bordered {
                border: 1px solid #000 !important;
            }

            thead {
                background-color: #c5fbae !important;
                color: #000;
            }

            .tt {
                display: inline-block;
                border: none;
                width: 180px !important;
            }
        }
    </style>

</head>
<body onload="print()" onafterprint="history.back()">
<div class="container-fluid">


    <div class="col-lg-8 offset-lg-2">
        <div class="row" style="border-bottom: 1px solid #039c4f;padding-bottom: 20px;">
            <div class="col-2">
                <img src="{{ asset('images/gntpharma.jpeg') }}" alt="Logo" class="w-100">
            </div>
            <div class="col-10 text-center">
                <div class="row">
                    <div class="col-12 titre text-center">
                        GNT PHARMA
                    </div>
                    <div class="col-12 text">
                        BP : 3582 Yaoundé – Cameroun, NGOUSSO
                        <br>
                        Montée Éleveur Immeuble Sainte Marie
                    </div>
                    <div class="col-12 text">
                        +237 69 71 49 4 12 / +237 67 52 47 865
                    </div>
                    <div class="col-12 text">
                        info@gntpharma-cameroun.com / www.gnt-pharma.com
                    </div>
                    <!-- <div class="col-12 text-bold">

                    </div> -->
                </div>
            </div>
        </div>
        <h3 class="text-center text-bold text-uppercase my-5">
            {{'Détail produit'|trans}}
        </h3>

        <table class="table table-bordered w-100">
            <tbody>
            <tr>
                <th class="w-25">
                    {{ 'Code Produit'|trans }}
                </th>
                <td>{{ produit.reference }}</td>
                <th class="text-center">
                    {{ 'Quantité en stock'|trans }}
                </th>
            </tr>

            <tr>
                <th>{{ 'Désignation'|trans }}</th>
                <td>{{ produit.desigantion }}</td>
                <td rowspan="5" class="text-center text-bolder w-25">{{ produit.stock|number_format(0, '' , ' ') }}</td>
            </tr>
            <tr>
                <th>{{ 'Prix Session'|trans }}</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>{{ 'Prix Public'|trans }}</th>
                <td>{{ produit.prixpublic }}</td>
            </tr>
            <tr>
                <th>{{ 'Mincommande'|trans }}</th>
                <td>{{ produit.mincommande }}</td>
            </tr>
            <tr>
                <th>{{ 'Fabricant'|trans }}</th>
                <td>{{ produit.fabriquant }}</td>
            </tr>

            <tr></tr>



            </tbody>
        </table>

        <table class="table table-bordered text-center w-100" style="page-break-before: always">
            <thead>
            <tr>
                <th class="w-25">{{'N° Lot'|trans}}</th>
                <th>{{ 'Date péremption'|trans}}</th>
                <th class="w-25">{{ 'Quantité'|trans}}</th>
            </tr>

            </thead>
            <tbody>
            {% for produit in stock %}

                <tr>
                    <td>{{ produit.lot }}</td>
                    <td>{{ produit.peremption|date('d/m/Y') }}</td>
                    <td>{{ produit.quantite|number_format(0, '' , ' ') }}</td>
                </tr>
            {% else %}
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
</body>

</html>
