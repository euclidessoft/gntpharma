<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title> &nbsp;</title>
    <style>
        .titre {
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            font-size: 30px;
            font-weight: bold;
            color: #039c4f;
        }

        .text {
            font-size: 14px;
        }

        .badge {
            background-color: red !important;
        }

        @media print {
            .table-success-light {
                color: #000 !important;
            }

            .table-bordered {
                border: 1px solid #000 !important;
            }

            thead {
                background-color: #c5fbae !important;
                color: #000;
            }

            .tt {
                display: inline-block;
                border: none;
                width: 180px !important;
            }
        }
    </style>

</head>
<body onload="print()" onafterprint="document.location.href='{{ path('livraison_historique') }}'">
<div class="container-fluid">


    <div class="col-lg-8 offset-lg-2">
        <div class="row" style="border-bottom: 1px solid #039c4f;padding-bottom: 20px;">
            <div class="col-2">
                <img src="{{ asset('images/gntpharma.jpeg') }}" alt="Logo" class="w-100">
            </div>
            <div class="col-10 text-center">
                <div class="row">
                    <div class="col-12 titre text-center">
                        GNT PHARMA
                    </div>
                    <div class="col-12 text">
                        BP : 3582 Yaoundé – Cameroun, NGOUSSO
                        <br>
                        Montée Éleveur Immeuble Sainte Marie
                    </div>
                    <div class="col-12 text">
                        +237 69 71 49 4 12 / +237 67 52 47 865
                    </div>
                    <div class="col-12 text">
                        info@gntpharma-cameroun.com / www.gnt-pharma.com
                    </div>
                    <!-- <div class="col-12 text-bold">

                    </div> -->
                </div>
            </div>
        </div>
        <h3 class="text-center text-bold text-uppercase my-5">
            {{ ' Bon de livraison '| trans }}
        </h3>


        <div class="row justify-content-end">
            <div class="col-lg-5">
                <table class="table table-success-light table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>{{ 'N° Retour'|trans }}</th>
                        <th>{{ 'Date Retour'|trans }}</th>
                        <th>{{ 'Client'|trans }}</th>
                        {#                    <th>Date prevu pour la livraison Livraison</th>#}
                    </tr>
                    </thead>
                    <tbody>
                    <td>{{ commandereference.id }}</td>
                    <td>{{ commandereference.date ? commandereference.date|date('d/m/Y') : '' }}</td>
                    <td>{{ commandereference.commande.user.nom }}</td>
                    {#                <td><input type="date" class="form-control" id="datelivraison"/></td>#}
                    </tbody>
                </table>
            </div>
        </div>

        <table class="table table-success-light table-bordered table-hover table-striped w-100" id="list">
            <thead>
            <tr>
                <th>{{ 'reference'|trans }}</th>
                <th>{{ 'designation'|trans }}</th>
                <th>{{ 'Qté retournée'|trans }}</th>
                <th>{{ 'Quantite à livrée'|trans }}</th>
                <th>{{ 'Stock disponible'|trans }}</th>
                <th>{{ 'Details'|trans }}</th>
            </tr>
            </thead>
            <tbody>

            {% for commande in commandes %}
            <tr>
                <td>{{ commande.produit.reference }}</td>
                <td>{{ commande.produit.desigantion }}</td>
                <td>
                    {{ commande.quantite }}
                </td>
                <td class="text-center">
                <span id="quantite{{ commande.produit.id }}">

                    </span>

                </td>
                <td class="text-center">{{ commande.stock|number_format(0, '' , ' ') }}</td>
                <td class="text-center">
                    <button type="button"
                            class="btn btn-success"
                            data-toggle="modal" data-target="#modal{{ commande.produit.id }}"
                            id="btn{{ commande.produit.id }}" onclick="detaillivraison({{ commande.produit.id }})">
                        <i class="fa fa-edit"></i>
                        {{ 'Details'|trans }}
                    </button>
                    <div class="modal fade" id="modal{{ commande.produit.id }}" tabindex="-1" role="dialog"
                         aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg text-center">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title fs-5" id="exampleModalLabel">
                                        {{ commande.produit.reference }} {{ commande.produit.desigantion }} {{ commande.produit.fabriquant }}

                                    </h5>
                                    <button type="button" class="close" data-dismiss="modal"
                                            aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body px-5">
                                    <table class="table table-success-light table-bordered table-hover table-striped w-100">
                                        <thead>
                                        <tr>
                                            <th>{{ 'N° Lot'|trans }}</th>
                                            <th>{{ 'Peremption'|trans }}</th>
                                            <th>{{ 'Commande en stock'|trans }}</th>
                                            <th>{{ 'Quantite à livrée'|trans }}</th>
                                        </tr>
                                        </thead>
                                        <tbody id="numerolot{{ commande.produit.id }}">

                                        <tr>
                                            <td colspan="4">
                                                <i class='fa-solid fa-spinner fa-spin-pulse fa-lg'></i>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                {% else %}
                {% endfor %}
        </table>
    </div>
</div>
</body>

</html>
