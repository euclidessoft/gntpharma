{% extends 'rh.html.twig' %}
{% block body %}
    <div class="col-lg-6 mt-4 fond-7">
        <h3 class="mt-4 mb-5 text-bold">
            <i class="fa fa-money-bill mr-2"></i>
            {{ "Liste des documents"|trans }}
        </h3>
        <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for critere_evaluation in critere_evaluations %}
            <tr>
                <td>{{ critere_evaluation.id }}</td>
                <td>{{ critere_evaluation.nom }}</td>
                <td>{{ critere_evaluation.description }}</td>
                <td>
                    <a href="{{ path('critere_evaluation_show', {'id': critere_evaluation.id}) }}" class="btn btn-success"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('critere_evaluation_edit', {'id': critere_evaluation.id}) }}" class="btn btn-success-light"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
