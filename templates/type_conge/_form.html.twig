{{ form_start(form, {'attr': {'id': 'form'}}) }}


    {% for message in app.flashes('notice') %}
        <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message|trans }}
        </div>
    {% endfor %}

    <div class="row">
 
        <div class="col-12 mb-4">
            {{ form_row(form.nom, {'attr': {'placeholder': 'Nom du type de cong√© *'}, 'label': false}) }}
        </div> 
        <div class="col-12 mb-4">
            {{ form_row(form.description, {'attr': {'placeholder': 'Description *'}, 'label': false}) }}
        </div>
    </div>

    {{ form_rest(form) }}
</div>

{{ form_end(form) }}
