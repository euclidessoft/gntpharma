{% extends 'rh.html.twig' %}
{% block body %}
    <div class="col-lg-10 mt-4 fond-7">
        <h3 class="mt-4 mb-5 text-bold">
            <i class="fa fa-money-bill mr-2"></i>
            {{ "Liste des documents"|trans }}
        </h3>
        <a href="{{ path('document_new') }}" class="btn btn-success m-3"><i class="fas fa-plus"></i>Ajouter des documents</a>
        <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
            <thead>
            <tr>
                <th>Matricule</th>
                <th>Employ√©(s)</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for employe in employes %}
                <tr>
                    <td>{{ employe.matricule }}</td>
                    <td>{{ employe.nom~' '~employe.prenom }}</td>
                   <td>
                       <a href="{{ path('document_show', {'id': employe.id}) }}" class="btn btn-success">
                           <i class="fas fa-eye"></i>
                       </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
