{% extends 'rh.html.twig' %}
{% block body %}
<div class="col-lg-6 mt-4 fond-7">
    <h3 class="mt-4 mb-5 text-bold">
        <i class="fa fa-money-bill mr-2"></i>
        {{ "Liste des types de contrat"|trans }}
    </h3>
    <a href="{{ path('type_contrat_new') }}" class="btn btn-success my-4"><i class="fas fa-plus"></i>Nouveau type de contrat</a>
    <table class="table table-success-light table-bordered table-hover table-striped w-100" id="liste">
        <thead>
            <tr>
                <th>Type</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for type_contrat in type_contrats %}
            <tr>
                <td>{{ type_contrat.type }}</td>
                <td>{{ type_contrat.contenu }}</td>
                <td>
                    <a href="{{ path('type_contrat_show', {'id': type_contrat.id}) }}" class="btn btn-success"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('type_contrat_edit', {'id': type_contrat.id}) }}" class="btn btn-success-light"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}