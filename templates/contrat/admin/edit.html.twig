{% extends
    is_granted('ROLE_ADMIN') ? 'admin.html.twig' :
    is_granted('ROLE_RH') ? 'rh.html.twig' :
    is_granted('ROLE_FINANCE') ? 'finance.html.twig' :
    is_granted('ROLE_STOCK') ? 'stock.html.twig' :
    is_granted('ROLE_LIVREUR') ? 'livreur.html.twig' :
    is_granted('ROLE_EMPLOYER') ? 'employe.html.twig' :
    'layout.html.twig'
%}
{% block administration %}active{% endblock %}
{% block contrat %}active{% endblock %}
{% block body %}


    <div class="col-lg-5 offset-lg-2 mt-4 fond-7 pb-5 pt-3 px-5">
        <h4 class="mb-5">
            <i class="fa fa-plus mr-2"></i>
            {{ 'Modifier le contrat'|trans }}
        </h4>

        {{ include('contrat/admin/_form.html.twig', {'button_label': 'Update'}) }}

        <div class="col-md-3 offset-md-3 mt-4 pt-3 fond-7">
            <div class="centrer">
                {#                <div class="row">#}
                <button type="button" class="btn btn-shadow btn-green btn-normal mb-3 mr-3" id="send"
                        onclick="envoie()">
                    <i class="fa fa-save"></i>
                    {{ 'Enregistrer'|trans }}
                </button>

                <a id="{{ contrat.id }}" onclick="load({{ contrat.id }})" href="{{ path('contrat_index') }}"
                   class="btn btn-success-light btn-normal mb-3">
                    <i class="fa fa-undo"></i>
                    {{ 'Retour'|trans }}
                </a>
                {{ form_rest(form) }}
                {#                </div>#}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
