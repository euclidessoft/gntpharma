{{ form_start(form, {'attr': {'id': 'form'}}) }}

<div class="col-lg-5 mt-5 fond-7 pb-5 pt-3 px-5">
    <h4 class="text-bold mt-3 mb-5">
        <i class="fa fa-user-slash"></i>
        {{ 'Nouvelle absence'|trans }}
    </h4>

    {% for message in app.flashes('notice') %}
    <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            &times;
        </button>
        {{ message|trans }}
    </div>
    {% endfor %}

    <div class="row">

        <div class="col-12 mb-4">
            {{ form_row(form.employe, {'attr': {'placeholder': 'Sélectionnez un employé *'}, 'label': false}) }}
        </div>

        <div class="col-12 mb-4">
            {{ form_row(form.dateAbsence, {'attr': {'placeholder': 'Date d\'absence', 'title': 'Date d\'absence'}, 'label': false}) }}
        </div>
        {{ form_rest(form) }}
    </div>
</div>